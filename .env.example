# Data Lineage Hub POC Environment Configuration

# API Configuration
APP_NAME="Data Lineage Hub POC"
APP_VERSION="1.0.0"
HOST="0.0.0.0"
PORT=8000
DEBUG=true

# OpenLineage Configuration
OPENLINEAGE_NAMESPACE="poc-pipeline"
OPENLINEAGE_PRODUCER="data-lineage-hub"

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_OPENLINEAGE_TOPIC="openlineage-events"
KAFKA_OTEL_SPANS_TOPIC="otel-spans"
KAFKA_OTEL_METRICS_TOPIC="otel-metrics"

# Marquez Configuration
MARQUEZ_URL="http://localhost:5000"

# ClickHouse Configuration (Optional - for pipeline metrics)
CLICKHOUSE_HOST="localhost"
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE="otel"
CLICKHOUSE_USER="default"
CLICKHOUSE_PASSWORD=""



# Multi-Tenant Namespace Configuration
DEFAULT_NAMESPACE="demo-pipeline"
NAMESPACE_ISOLATION_ENABLED=true

# Organization-wide Service Configuration
HUB_SERVICE_NAME="Data Lineage Hub"
ENABLE_EXTERNAL_INGESTION=true
API_KEY_VALIDATION=false  # Set to true in production

# SDK Client Configuration (for teams using this service)
LINEAGE_HUB_ENDPOINT="http://localhost:8000"
LINEAGE_HUB_API_KEY="demo-api-key"

# Data Configuration
SAMPLE_DATA_PATH="data"

# Redis Configuration (for namespace caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# Enterprise Features
RATE_LIMITING_ENABLED=true
RATE_LIMIT_PER_NAMESPACE=1000  # requests per minute per namespace
AUDIT_LOGGING_ENABLED=true

# Namespace Management
AUTO_CREATE_NAMESPACES=true
NAMESPACE_QUOTA_EVENTS_PER_DAY=100000
NAMESPACE_RETENTION_DAYS=30

# Cross-Namespace Features  
ENABLE_CROSS_NAMESPACE_DISCOVERY=true
REQUIRE_NAMESPACE_PERMISSIONS=false  # Set to true in production

# Monitoring & Alerting
HEALTH_CHECK_DEPENDENCIES=true
SLACK_WEBHOOK_URL=""  # Optional: for service alerts
METRICS_EXPORT_INTERVAL=30  # seconds